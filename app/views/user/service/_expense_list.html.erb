<div class='row'>
  <div class='col-md-8'>
    <div class="carousel slide media-carousel" id="media">
      <div class="carousel-inner">
        <% weekly_expenses.each_with_index do |expense_items, index| %>
          <div class="item <%= "active" if index == weekly_expenses.length - 1 %>">
            <h3><%= expense_items.first.try :date %></h3>
            <table class="table">
              <thead>
              </thead>
              <tbody>
                <% expense_items.each do |expense_item| %>
                  <tr>
                    <td><%= l expense_item.date, format: :short %></td>
                    <td><%= expense_item.category.name %></td>
                    <td><%= expense_item.sub_category.try :name %></td>
                    <td><%= expense_item.name %></td>
                    <td><%= expense_item.price %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
      <a data-slide="prev" href="#media" class="left carousel-control">‹</a>
      <a data-slide="next" href="#media" class="right carousel-control">›</a>
    </div>                          
  </div>
</div>
